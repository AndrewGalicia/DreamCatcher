<%- include('../partials/header') %>

<h2>Update Profile Page</h2>

<body>
	<h1>Update Profile</h1>
	<form action="/profiles/<%= profileId %>/update" method="POST">
		<label for="firstName">First Name:</label>
		<input type="text" id="firstName" name="firstName" value="<%= profile.firstName %>" required>

		<label for="lastName">Last Name:</label>
		<input type="text" id="lastName" name="lastName" value="<%= profile.lastName %>" required>

		<label for="sleepGoalHours">Sleep Goal Hours:</label>
		<input type="number" id="sleepGoalHours" name="sleepGoalHours" value="<%= profile.sleepGoal.hours %>" min="0" required>

		<label for="sleepGoalMinutes">Sleep Goal Minutes:</label>
		<input type="number" id="sleepGoalMinutes" name="sleepGoalMinutes" value="<%= profile.sleepGoal.minutes %>" min="0" max="59" required>

		<button type="submit">Update Profile</button>
	</form>
	<% if (errorMsg) { %>
		<p><%= errorMsg %></p>
	<% } %>
</body>

<%- include('../partials/footer') %>
